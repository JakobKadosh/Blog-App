<%- include('partials/header') %>
<div class='ui main text container segment'>
	<div class='ui huge header'>
		New Blog Post
	</div>
	<form class='ui form'action="/blogs" method='post'>
		<div class='field'>
			<label>Title</label>
			
			<input required type='text'placeholder='Title' name='blog[title]'>
		</div>
		<div class='field'>
			<label>Image url</label>
			<input required type='text'placeholder='Image url'name='blog[image]'>
		</div>
		<div class='field'>
			<label>Post body</label>
			<textarea required name='blog[body]'></textarea>
		</div>
		
		<input class='ui violet big basic button'  type='submit'>
	</form>
</div>
