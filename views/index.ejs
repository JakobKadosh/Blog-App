<%- include('partials/header') %>
	<div class="ui container text main">
		<div class='ui huge header'>
			<h1>RESTfull Blog App</h1>
		</div>
		<div class='ui top attached segment'>	
			<div class='ui divided items'>
				<% blogs.forEach((blog)=>{ %>
					<div class='item'>
						<div class='image'>
							<img class='ui centered rounded image' src='<%= blog.image %>'>
						</div>
						<div class='content'>
							<a class='header' href='blogs/<%= blog._id%>'><%=blog.title%></a>
							<div class='meta'>
								<span><%= blog.created.toDateString()%></span>	
							</div>
							<div class='description'>
								<p><%- blog.body.substring(0,100) %></p>
							</div>
							<div class='extra'>
								<a class='ui flaoted violet basic button' href='blogs/<%= blog._id%>'>Read more<i class='right chevron icon'></i></a>
							</div>
						</div>
					</div>
				<% }) %>
			</div>
		</div>	
	</div>
<%- include('partials/footer') %>