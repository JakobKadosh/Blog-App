<%- include('partials/header') %>
<div class='ui main text container segment'>
	<div class='ui huge header'>
		Edit <%= blog.title %>
	</div>
	<form class='ui form' action="/blogs/<%= blog._id %>?_method=PUT" method='POST'>
		<input type="hidden" name="_method" value="PUT">
		<div class='field'>
			<label>Title</label>
			<input required type='text' value='<%= blog.title %>' name='blog[title]'>
		</div>
		<div class='field'>
			<label>Image url</label>
			<input required type='text'value='<%= blog.image %>' name='blog[image]'>
		</div>
		<div class='field'>
			<label>Post body</label>
			<textarea required name='blog[body]'><%= blog.body %></textarea>
		</div>
		
		<input class='ui violet big basic button'  type='submit'>
	</form>
</div>
